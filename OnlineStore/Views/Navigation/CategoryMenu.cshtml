@model IEnumerable<string>
    
<div class="panel panel-default">
    <div class="panel-heading panel-heading-custom">Categories</div>
    @foreach (var link in Model)
    {
        @Html.RouteLink(link,
            new
            {
                controller = "Product",
                action = "List",
                category = link,
                page = 1
            },
            new
            {
                @class = "btn btn-block btn-md" 
                + (link == ViewBag.SelectedCategory? " btn-selected" : "")
            }
            )
    }
    
</div>

